<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.AlarmMedicamentoDetails" tools:layout_editor_absoluteY="81dp">

    <ImageView android:layout_width="0dp"
               android:layout_height="300dp"
               android:id="@+id/imgGIF"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="6dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Hora de tomar o medicamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/imgGIF"/>
    <Button
            android:background="@drawable/done"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>