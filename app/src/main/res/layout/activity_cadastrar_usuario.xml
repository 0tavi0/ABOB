<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.CadastrarUsuarioActivity" tools:layout_editor_absoluteY="81dp">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtNome"
            android:hint="Nome"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="59dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnFotoPerfil"/>
    <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/edtSenha" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtEmail"
            android:hint="Email"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="59dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtNome"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text|textPassword"
            android:ems="10"
            android:id="@+id/edtSenha"
            android:hint="Senha"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/edtEmail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="59dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp"/>
    <Button
            android:text="Cadastrar"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCriarConta"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintEnd_toEndOf="@+id/edtSenha"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/progress"/>
    <Button
            android:text="Foto"
            android:background="@drawable/bg_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btnFotoPerfil"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="126dp"
            android:layout_marginStart="126dp" app:layout_constraintStart_toStartOf="parent"
    />

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:src="@tools:sample/avatars[0]"
            android:id="@+id/imgPerfil"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnFotoPerfil"
            app:layout_constraintStart_toStartOf="@+id/btnFotoPerfil"/>



</android.support.constraint.ConstraintLayout>