<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_historico"
        tools:context=".view.HistoricoActivity" tools:layout_editor_absoluteY="81dp">


    <Button
            android:text="Data"
            android:layout_width="69dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_btn"
            android:textColor="@android:color/white"
            android:id="@+id/btnPegarMedicamento"
            app:layout_constraintStart_toStartOf="@+id/textView11" app:layout_constraintEnd_toEndOf="@+id/textView11"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView11"/>
    <EditText
            android:background="@drawable/bg_edttext"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:paddingLeft="8dp"
            android:id="@+id/edtQuantidade"
            android:hint="Ex. 6 "
            app:layout_constraintStart_toStartOf="@+id/textView10" app:layout_constraintEnd_toEndOf="@+id/textView10"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView10"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="360dp"
            android:layout_height="301dp"
            android:layout_marginTop="6dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="HistÃ³rico"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"/>
    <TextView
            android:text="Pegar medicamento"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rv" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Quantidade"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"/>
    <TextView
            android:text="Data"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>