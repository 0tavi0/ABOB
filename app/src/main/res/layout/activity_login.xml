<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.LoginActivity" tools:layout_editor_absoluteY="81dp">

    <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="156dp" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/edtSenha" android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/btnLogin" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="spread_inside"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtEmail"
            android:hint="Email"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text|textPassword"
            android:ems="10"
            android:id="@+id/edtSenha"
            android:hint="Senha"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/edtEmail"/>
    <Button
            android:text="Cadastrar"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:id="@+id/btnCriarConta"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintStart_toStartOf="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="@+id/btnLogin"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin"/>

    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintEnd_toEndOf="@+id/edtSenha"
            app:layout_constraintStart_toStartOf="@+id/edtSenha" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/progress" android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@+id/btnCriarConta"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="74dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="144dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="144dp"/>

</android.support.constraint.ConstraintLayout>